@model Jobsway2goMvc.Models.Event

@{
    ViewData["Title"] = "Create";
}

<!-- Post Event  Section Start -->
<div class="event-post ptb-100">
    <div class="container">
        <form class="event-post-from" asp-action="Create">
            <h2>Create an event</h2>
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="title" class="form-label">Title</label>
                        <input asp-for="Title" type="text" class="form-control" id="title" placeholder="Title">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="companyName" class="form-label">Company Name</label>
                        <input asp-for="CompanyName" type="text" class="form-control" id="companyName" placeholder="Company Name">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="URL" class="form-label">URL</label>
                        <input asp-for="URL" class="form-control" id="URL" placeholder="URL">
                    </div>
                </div>
                <div class="col-md-6">
                     <div class="form-group">
                         <label for="location" class="form-label">Location</label>
                         <input asp-for="Location" type="text" class="form-control" id="location" placeholder="e.g. London">
                     </div>
             </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ImagePath" class="form-label">Image Path</label>
                        <input asp-for="ImagePath" class="form-control"/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="eventDate" class="form-label">Event Date</label>
                        <input asp-for="EventDate" type="date" class="form-control" id="eventDate" placeholder="" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="GuestsIds" class="control-label">Guests</label>
                    <select asp-for="GuestsIds" class="form-control guest-multi-select" multiple="multiple">
                        @foreach (var user in ViewBag.Users)
                        {
                            <option value="@user.Value">@user.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control description-area" id="description" rows="6" placeholder="Job Description"></textarea>
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary post-btn">
                        Create
                    </button>
                    <a class="btn back-btn" asp-action="Index">Back to Events</a>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Post Event Section End -->