@model Jobsway2goMvc.Models.JobCategory

@{
    ViewData["Title"] = "Create";
}

<div class="event-post ptb-100">
    <div class="container">
        <form class="event-post-from" asp-action="Create">
            <h2>Create a category</h2>
            <div class="row">
                <div class="col-md-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                </div>
            </div>
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary post-btn">
                    Create
                </button>
                <a class="btn back-btn" asp-action="Index">Back to Job Categories</a>
            </div>
        </form>
    </div>
</div>
