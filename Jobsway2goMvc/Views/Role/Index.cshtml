@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Role Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin:40px;">

    <h1>Role Manager</h1>
    <a class="btn btn-info mb-1" style="width: 20%; asp-controller="Role" asp-action="UserRoles">View User with Roles </a>
    <br/>
<div>
    <form method="post" asp-action="Create" asp-controller="Role">
        <div class="input-group">
            <span class="input-group-btn">
                    <button class="btn btn-primary mx-1" style="width: 100%;">Add New Role</button>
            </span>
            <input name="roleName" placeholder="Write role here..." class="form-control w-25" required />
        </div>
    </form>
</div>
    <br />
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="table-dark">             
                <th>Role Name</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-primary" style="width: 30%;" asp-action="Edit" asp-route-id="@role.Id">Edit </a>
                        <a class="btn btn-info" style="width: 30%;"  asp-controller="Role" asp-action="Details" asp-route-id="@role.Id">Details </a>
                        <a id="deleteAction-@role.Id" class="btn btn-danger" style="width: 30%;" data-name="@role.Name"
                                           data-delete-action-url="/Role/DeleteConfirmed/@role.Id"
                                           data-reload-url="@Url.Action("Index","Role")">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>