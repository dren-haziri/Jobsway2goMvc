@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Edit";
}

<div class="event-post ptb-100">
    <div class="container">
        <form class="event-post-from" asp-action="Edit">
            <h2>Edit this Role</h2>
            <div class="row">
                <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
             </div>
            </div>
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary post-btn">
                    Save
                </button>
                <a class="btn back-btn" asp-action="Index">Back to Roles</a>
            </div>
        </form>
    </div>
</div>