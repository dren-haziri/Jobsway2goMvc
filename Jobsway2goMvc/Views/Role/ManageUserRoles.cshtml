@model List<ManageUserRolesViewModel>

@{
    ViewData["Title"] = "ManageUserRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].Name
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input asp-controller="Role" asp-action="ChangeRole" asp-route-id="@ViewBag.UserId" type="submit" value="Update" class="btn btn-primary"
                   style="width:auto"/>
            <input asp-controller="Role" asp-action="ChangeRole" asp-route-id="@ViewBag.UserId"
                   class="btn btn-primary" type="submit" value="Cancel" style="width:auto" />
        </div>
    </div>
</form>