@model IEnumerable<Jobsway2goMvc.Models.ApplicationUser>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-dark">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td><form asp-action="AddMember" asp-controller="Group">
                    <input asp-for="@user.Id" hidden/>
                        <input type="hidden" asp-for="GroupId" value="@Model.GroupId" />
                    <button>Add Member </button>
                </form></td>
            </tr>
        }
    </tbody>
</table>

    <a asp-action="Index">Back to List</a>
</div>
