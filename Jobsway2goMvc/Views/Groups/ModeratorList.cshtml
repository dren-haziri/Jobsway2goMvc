@model IEnumerable<Jobsway2goMvc.Models.ApplicationUser>

@{
    ViewData["Title"] = "Moderator List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int groupId = ViewBag.Id;
}

<h1>Moderators List</h1>

<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-dark">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-action="RemoveModerator" asp-controller="Groups">
                            <input asp-for="@user.Id" name="userId" hidden />
                            <input asp-for="@groupId" name="groupId" hidden />
                            <button class="btn btn-danger">Remove Moderator</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No Moderators at the moment</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Details" asp-route-id="@groupId">Back to Details</a> |
</div>