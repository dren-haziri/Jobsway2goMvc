@model Jobsway2goMvc.Models.Collection

@{
    ViewData["Title"] = "Details";
    @ViewBag.NullUser
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Jobsway2goMvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
</head>
<p class="text-danger"> @ViewBag.NullUser</p>

<div>
    <dl class ="details-text">
        <h1> @Html.DisplayFor(model => model.Name) </h1>
    </dl>
</div>
<hr />
<div class="details-text">
    <h4>Jobs</h4>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().Schedule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().OpenSpots)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().Requirements)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().DateFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().DateTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().MinSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().MaxSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().Applicants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jobs.First().Category)
            </th>
        </tr>
    </thead>
    @ViewBag.JobCollection
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => job.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(model => job.Location)
                </td>
                <td>
                    @Html.DisplayFor(model => job.Schedule)
                </td>
                <td>
                    @Html.DisplayFor(model => job.Description)
                </td>
                <td>
                    @Html.DisplayFor(model => job.OpenSpots)
                </td>
                <td>
                    @Html.DisplayFor(model => job.Requirements)
                </td>
                <td>
                    @Html.DisplayFor(model => job.DateFrom)
                </td>
                <td>
                    @Html.DisplayFor(model => job.DateTo)
                </td>
                <td>
                    @Html.DisplayFor(model => job.MinSalary)
                </td>
                <td>
                    @Html.DisplayFor(model => job.MaxSalary)
                </td>
                <td>
                    @Html.DisplayFor(model => job.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(model => job.Applicants)
                </td>
                <td>
                    @Html.DisplayFor(model => job.Category)
                </td>
                <td>
                    <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id">Details</a>
                    <form asp-action="RemoveJob">
                        <input type="hidden" name="jobId" value="@Model.JobId" />
                        <input type="hidden" name="collectionId" value="@Model.CollectionId" />
                        <input type="submit" value="Remove from Collection" class="btn btn-danger" />
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="Collections" asp-action="Index">Back to List</a>
</div>
