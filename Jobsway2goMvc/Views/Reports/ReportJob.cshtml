@using Jobsway2goMvc.Enums;
@model Jobsway2goMvc.Models.Job;
@{
    ViewData["Title"] = "ReportJob";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="ReportJob">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input disabled asp-for="CompanyName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input disabled asp-for="Location" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Schedule" class="control-label"></label>
                <input disabled asp-for="Schedule" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input disabled asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="OpenSpots" class="control-label"></label>
                <input disabled asp-for="OpenSpots" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Requirements" class="control-label"></label>
                <input disabled asp-for="Requirements" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateFrom" class="control-label"></label>
                <input disabled asp-for="DateFrom" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateTo" class="control-label"></label>
                <input disabled asp-for="DateTo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MinSalary" class="control-label"></label>
                <input disabled asp-for="MinSalary" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MaxSalary" class="control-label"></label>
                <input disabled asp-for="MaxSalary" class="form-control" />
            </div>
            <div class="pu-2 form-group">
                <label class="control-label">Why do you want to report this job ?</label>
                <select class="form-control" name="ReportEnum" asp-items="Html.GetEnumSelectList<ReportEnum>()"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Report" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>