@using Jobsway2goMvc.Enums;
@model Jobsway2goMvc.Models.Post

@{
    ViewData["Title"] = "ReportPost";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CreatedAtUTC" class="control-label"></label>
                <input asp-for="CreatedAtUTC" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" disabled class="form-control" asp-items="Html.GetEnumSelectList<PostType>()"></select>
            </div>
            <input type="hidden" asp-for="GroupId" value="@Model.GroupId" />
            <div class="pu-2 form-group">
                <label class="control-label">Why do you want to report this post ?</label>
                <select class="form-control" name="Report" asp-items="Html.GetEnumSelectList<ReportEnum>()"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Report" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
